generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// 1. ENUMS
// --------------------------------------

enum Role {
  USER
  ADMIN
}

enum CarStatus {
  AVAILABLE
  RENTED
  MAINTENANCE
  OUT_OF_SERVICE
}

enum BookingStatus {
  DRAFT
  PENDING
  VERIFIED
  CONFIRMED
  ONGOING
  COMPLETED
  CANCELLED
}

enum BookingType {
  RENTAL
  REPLACEMENT
}

enum VerificationStatus {
  NOT_UPLOADED
  PENDING
  APPROVED
  REJECTED
}

enum LicenseCategory {
  AM // Mopeds
  A  // Motorcycles
  B  // Cars (Standard)
  C  // Heavy Vehicles
  D  // Buses
}

enum CritAirCategory {
  CRIT_AIR_0
  CRIT_AIR_1
  CRIT_AIR_2
  CRIT_AIR_3
  CRIT_AIR_4
  CRIT_AIR_5
  NO_STICKER
}

enum FuelType {
  PETROL
  DIESEL
  ELECTRIC
  HYBRID
  LPG
  CNG
}

enum Transmission {
  MANUAL
  AUTOMATIC
  CVT
  DCT
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

// --------------------------------------
// 2. CONFIGURATION & USER MODELS
// --------------------------------------

model PlatformSettings {
  id                 String   @id @default(uuid())
  companyName        String   @default("Car Rental France")
  supportEmail       String?
  supportPhone       String?
  address            String?
  taxPercentage      Float    @default(20.0)
  currency           String   @default("EUR")
  youngDriverMinAge  Int      @default(25)
  youngDriverFee     Float    @default(0)
  updatedAt          DateTime @updatedAt
}

model User {
  id              String                @id @default(uuid())
  email           String                @unique
  fullName        String?
  password        String?               
  phoneNumber     String?
  avatarUrl       String?               
  dateOfBirth     DateTime?             
  fullAddress     String?               
  role            Role                  @default(USER)
  facebookId      String?               @unique
  appleId         String?               @unique
  googleId        String?               @unique
  verification    DocumentVerification?
  bookings        Booking[]
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  @@index([email])
}

model DocumentVerification {
  id                 String             @id @default(uuid())
  userId             String             @unique
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  licenseFrontUrl    String?
  licenseBackUrl     String?
  idCardUrl          String?            
  addressProofUrl    String?            
  licenseNumber      String?            
  licenseExpiry      DateTime?          
  licenseCategory    LicenseCategory    @default(B)
  idNumber           String?           
  idExpiry           DateTime?          
  status             VerificationStatus @default(NOT_UPLOADED)
  aiMetadata         Json?              
  rejectionReason    String?            
  verifiedAt         DateTime?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
}

model BookingVerification {
  id          String      @id @default(uuid())
  bookingId   String      @unique
  booking     Booking     @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  token       String      @unique
  expiresAt   DateTime
  isVerified  Boolean     @default(false)
  verifiedAt  DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

// --------------------------------------
// 3. VEHICLE MODELS
// --------------------------------------

model Brand {
  id        String   @id @default(uuid())
  name      String   @unique
  logoUrl   String?
  models    VehicleModel[]
}

model VehicleModel {
  id        String   @id @default(uuid())
  name      String
  brandId   String
  brand     Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  cars      Car[]

  @@unique([name, brandId])
}

model Car {
  id              String           @id @default(uuid())
  modelId         String
  model           VehicleModel     @relation(fields: [modelId], references: [id], onDelete: Cascade)
  year            Int
  plateNumber     String           @unique
  transmission    Transmission
  fuelType        FuelType?
  seats           Int
  requiredLicense LicenseCategory  @default(B)
  pricePerDay     Float
  depositAmount   Float            @default(0)
  dailyKmLimit    Float?
  extraKmCharge   Float            @default(0)
  currentOdometer Float            @default(0)
  critAirRating   CritAirCategory  @default(CRIT_AIR_1)
  status          CarStatus        @default(AVAILABLE)
  images          CarImage[]
  bookings        Booking[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([status])
}

model CarImage {
  id        String   @id @default(uuid())
  carId     String
  car       Car      @relation(fields: [carId], references: [id], onDelete: Cascade)
  url       String
  isPrimary Boolean  @default(false)
}

// --------------------------------------
// 4. BOOKING & PAYMENT MODELS
// --------------------------------------

model Booking {
  id              String        @id @default(uuid())
  userId          String
  carId           String
  startDate       DateTime
  endDate         DateTime
  pickupTime      String?       // Time of pickup (e.g., "10:00")
  returnTime      String?       // Time of return (e.g., "17:00")
  basePrice       Float         @default(0)
  taxAmount       Float         @default(0)
  surchargeAmount Float         @default(0)
  depositAmount   Float         @default(0) 
  startOdometer   Float?        
  endOdometer     Float?        
  damageFee       Float         @default(0)    
  extraKmFee      Float         @default(0)    
  returnNotes     String?                      
  totalPrice      Float         @default(0)    
  bookingType     BookingType   @default(RENTAL)
  repairOrderId   String?
  status          BookingStatus @default(PENDING)
  user            User          @relation(fields: [userId], references: [id])
  car             Car           @relation(fields: [carId], references: [id])
  payment         Payment?
  verification    BookingVerification?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([status])
  @@index([bookingType])
}

model Payment {
  id            String        @id @default(uuid())
  bookingId     String        @unique
  booking       Booking       @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  amount        Float
  status        PaymentStatus @default(PENDING)
  stripeId      String?       @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}