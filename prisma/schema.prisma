generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String     @id @default(uuid())
  email          String     @unique
  password       String
  firstName      String
  lastName       String
  phoneNumber    String?
  dateOfBirth    DateTime?
  address        String?
  city           String?
  country        String?
  postalCode     String?
  language       String     @default("en") // "en" for English, "fr" for French
  gdprConsent    Boolean    @default(false)
  consentDate    DateTime?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  bookings       Booking[]
  refreshTokens  RefreshToken[]
}

model Car {
  id              String     @id @default(uuid())
  brand           String
  model           String
  year            Int
  plateNumber     String     @unique
  fuelType        String     // PETROL, DIESEL, ELECTRIC, HYBRID
  transmission    String     // MANUAL, AUTOMATIC
  seats           Int
  doors           Int
  pricePerHour    Float
  pricePerKm      Float
  pricePerDay     Float
  critAirRating   Int        // French environmental rating (0-5)
  availability    Boolean    @default(true)
  descriptionEn   String?    // English description
  descriptionFr   String?    // French description
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  bookings        Booking[]
  images          CarImage[]
}

model CarImage {
  id          String   @id @default(uuid())
  carId       String
  imagePath   String   // Relative path to the uploaded image
  altText     String?  // Alternative text for accessibility
  isPrimary   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  car         Car      @relation(fields: [carId], references: [id], onDelete: Cascade)
}

model Payment {
  id            String   @id @default(uuid())
  bookingId     String   @unique
  amount        Float    // Total amount including taxes
  baseAmount    Float    // Amount before taxes
  taxAmount     Float    // 20% French TVA
  currency      String   @default("EUR")
  status        String   @default("pending") // pending, completed, failed, refunded
  paymentMethod String?  // Could be credit_card, paypal, etc.
  transactionId String?  // External payment provider transaction ID
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  booking       Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}

model Booking {
  id              String     @id @default(uuid())
  userId          String
  carId           String
  startDate       DateTime?  // Only required for DAY rentals
  endDate         DateTime?  // Only required for DAY rentals
  totalPrice      Float      // Including taxes
  basePrice       Float      // Without taxes
  taxAmount       Float      // TVA 20%
  rentalType      String     // HOUR, KM, DAY
  rentalValue     Float      // Hours for HOUR, KM for KM, Days for DAY
  status          String     @default("pending") // pending, confirmed, cancelled, completed
  pickupLocation  String?
  dropoffLocation String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  user            User       @relation(fields: [userId], references: [id])
  car             Car        @relation(fields: [carId], references: [id])
  payment         Payment?
}

model RefreshToken {
  id         String    @id @default(uuid())
  token      String    @unique
  userId     String
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id])
}